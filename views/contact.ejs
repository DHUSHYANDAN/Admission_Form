   }
   
   .logo {
	   padding: 5px;
	   padding-bottom:15px;
	   margin-bottom:15px;
	   height: 100px;}
.lt{position:relative;}
.logo-text{color:yellow;
position:absolute;
bottom:-2px;}



   .web {
	   position: relative;
	   padding: 10px 10px;
	   text-decoration: none;
	   font-size: 17px;
	   overflow: hidden;
   }
   
   .web a {
	   color: #f2f2f2;
	   padding: 14px 16px;
	   text-decoration: none;
	   font-size: 20px;
	   border-radius: 5px;
	   padding-top: 5px;
	   padding-bottom: 5px;
	   margin: 1% 20px;
   }
   
   .web a:hover {
	   background-color: #ddd;
	   transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
	   color: black;
   }


button {
    padding: 10px 20px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

button:hover {
    background-color: #0056b3;
}
body{
